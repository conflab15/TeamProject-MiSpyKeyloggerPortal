@model PaginatedList<MiSpyWebAppMVC.Models.LoggedEvent>
@{
    ViewData["Title"] = "Logged Events Report";
}
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="container row p-0 mt-5">
    <div class="col-10">
        <h2 class="text-info text-dark font-weight-bold">Logged Event Report for: @User.Identity.Name</h2>
    </div>
    <hr />
    <div class="col-10">
        <h4>Logged Events are listed below, click on an event title to view the details of the event!</h4>
    </div>
    <hr />
</div>
<br />

@if (Model.Count > 0)
{
    <div class="row mb-3 pb-2">
        <div class="col-8">
            <form asp-action="Index">
                <div class="input-group">
                    <input name="searchBy" type="text" class="form-control" placeholder="Search Criteria" aria-label="searchBtn" aria-describedby="searchBtn" />
                    <button class="btn btn-light" type="submit" id="searchBtn">Search</button>
                </div>
            </form>
        </div>
        <div class="col-4">
            <form asp-action="Index">
                <div class="input-group">
                    <input name="pageSize" type="number" class="form-control" placeholder="Page Size (Greater than 5)" aria-label="sizeBtn" aria-describedby="sizeBtn" />
                    <button class="btn btn-light" type="submit" id="sizeBtn">Apply</button>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-striped ">
        <thead>
            <tr class="table-secondary">
                <th id="tableHead">
                    <a class="btn btn-outline-dark">Event</a>
                </th>
                <th id="tableHead">
                    <a asp-route-sortBy="Time" class="btn btn-outline-dark">Time</a>
                </th>
                <th id="tableHead">
                    <a asp-route-sortBy="HasRead" class="btn btn-outline-dark">Has been read?</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="EventDetails" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Event)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HasRead)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @nextDisabled">
        Next
    </a>
}
else
{
    <h2>No logged events</h2>
    <br />
    <h2>Have you downloaded the Mi-Spy Logging Application?</h2>
    <p>To start seeing a report of typed events, please download the Logging Application to record events to display</p>
    <br />
    <a class="btn btn-light" asp-controller="Home" asp-action="Download">Download</a>
}



